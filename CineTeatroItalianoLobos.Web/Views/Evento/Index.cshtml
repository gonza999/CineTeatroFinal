@model PagedList.IPagedList<CineTeatroItalianoLobos.Web.Models.Evento.EventoListVm>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Eventos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreEvento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TipoEvento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Clasificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Distribucion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Suspendido)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombreEvento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoEvento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Clasificacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Distribucion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Suspendido)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.EventoId }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.EventoId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Borrar", "Delete", new { id = item.EventoId }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))


